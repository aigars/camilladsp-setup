[Unit]
Description=CamillaDSP remote
StartLimitIntervalSec=0
PartOf=camilladsp.service
Requires=camilladsp.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/dsp-user/scripts/remote.py -c /home/dsp-user/scripts/remote.json
Restart=always
RestartSec=5
SyslogIdentifier=camilladsp-remote
User=root
Group=root

[Install]
WantedBy=multi-user.target
