[Unit]
Description=CamillaDSP Daemon
StartLimitIntervalSec=0
After=syslog.target

[Service]
Type=simple
ExecStart=/usr/local/bin/camilladsp -p1234 /home/dkdsp/camilladsp-setup/output.yaml
Restart=always
RestartSec=5
SyslogIdentifier=camilladsp
User=root
Group=root
CPUSchedulingPolicy=fifo
CPUSchedulingPriority=10

[Install]
WantedBy=multi-user.target
